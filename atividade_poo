# Lista de Exercícios 07 - POO

from algorismos_romanos import match

# Exercício 1

class ConverterIntRom():
    
    def converter_numero(self, numero: int) -> str:
        if numero in match.keys():
            return match[numero]
    
N = ConverterIntRom()
print(N.converter_numero(35))

# Exercício 2

class ConverterRomInt():
    
    def converter_simbolo(self, simbolo: str) -> int:
        if simbolo in match.values():
            return list(match.values()).index(simbolo) + 1

S = ConverterRomInt()
print(S.converter_simbolo('IX'))
